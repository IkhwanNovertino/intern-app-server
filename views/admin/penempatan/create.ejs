<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Penempatan Peserta Magang</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/penempatan">Penempatan</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- /.card-header -->
          <div class="card-body">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Tambah Penempatan Peserta Magang</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/penempatan/create" method="post">
                <input type="hidden" name="dataPeserta" id="dataPeserta" value="<%= pesertaString %>">
                <div class="card-body">
                  <div class="form-group">
                    <label for="peserta">Nama peserta :</label>
                    <select class="form-control select2" data-placeholder="Pilih peserta" style="width: 100%;" name="peserta" id="peserta" required>
                      <option></option>
                      <% peserta.forEach(e => { %>
                        <option value="<%= e._id %>"><%= e.name %></option>
                      <% }) %>
                    </select>
                  </div>
                  
                  <div class="form-group">
                    <label>Tanggal Mulai - Selesai Penempatan :</label>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text">
                          <i class="far fa-calendar-alt"></i>
                        </span>
                      </div>
                        <input type="text" class="form-control float-right"  value="" name="waktuPenempatan" id="reservationFormPenempatan">
                    </div>
                    <!-- /.input group -->
                  </div>
                  

                  <div class="form-group">
                    <label for="supervisor">Pembimbing lapangan (Supervisor) :</label>
                    <select class="form-control select2" style="width: 100%;" name="supervisor" id="supervisor" required>
                      <option selected="selected">Pilih pembimbing</option>
                      <% supervisor.forEach(e => { %>
                        <option value="<%= e._id %>"><%= e.name %> [ <%= e.jabatan.toLowerCase() %> ]</option>
                        <% }) %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="biro">Bidang Penempatan :</label>
                    <select class="form-control select2" style="width: 100%;" name="biro" id="biro" required>
                      <option selected="selected">Pilih Bidang kegiatan</option>
                      <% biro.forEach(e => { %>
                        <option value="<%= e._id %>"><%= e.name %></option>
                        <% }) %>
                    </select>
                  </div>
                </div>

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>