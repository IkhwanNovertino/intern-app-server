<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>report_<%= tglFormatForm(Date.now())%>_<%= tglFormatForm(datas.tglAwal) %>_<%= tglFormatForm(datas.tglAkhir) %></title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/adminlte/plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/adminlte/dist/css/adminlte.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
<div class="wrapper">
  <!-- Main content -->
  <section class="rekapitulasi pl-4 pr-4">

    <div class="row kop-surat d-flex align-items-center pt-1 pb-2">
      <div class="col-2 text-center">
        <img src="/img/logo.png" width="68" alt="logo pemko">
      </div>
      <div class="col-10 text-center">
        <h6 class="sub-heading">PEMERINTAH KOTA BANJARBARU</h6>
        <h4 class="heading font-weight-bolder">DINAS KOMUNIKASI DAN INFORMATIKA</h4>
        <p>Jl. Pangeran Suriansyah Nomor 5 Banjarbaru Kalimantan Selatan</p>
        <p>Telp./Fax. (0511) 6749126 E-mail : kominfobjb@banjarbarukota.go.id</p>
      </div>
      <div class="line-kop-1 col-12"></div>
      <div class="line-kop col-12"></div>
      <!-- <div class="line-kop col-11"></div> -->
    </div>

    <div class="row rekapitulasi-title ">
      <div class="rekapitulasi-title mx-auto">
        <h4 class="text-center font-weight-bold my-2">
          REKAPITULASI DATA PESERTA MAGANG <br>DI DINAS KOMUNIKASI DAN INFORMATIKA <br> KOTA BANJARBARU
        </h4>
        <p class="d-flex justify-content-center font-weight-bold">Periode : <%= tglFormatSertif(datas.tglAwal)%> s.d. <%= tglFormatSertif(datas.tglAkhir) %></p>
      </div>
    </div>
    <br>
    <br>

    <!-- data peserta row -->
    <div class="row d-flex justify-content-center">
      <div class="col-6 table-responsive">
        <table class="table table-bordered">
          <caption>*data peserta magang</caption>
          <thead>
          <tr class="text-center">
            <th></th>
            <th>Jumlah Peserta Magang</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td>Aktif</td>
            <td class="d-flex justify-content-center"><%= datas.pesertaAktif %></td>
          </tr>
          <tr>
            <td>Selesai</td>
            <td class="d-flex justify-content-center"><%= datas.pesertaSelesai %></td>
          </tr>
          <tr>
            <td class="text-bold d-flex justify-content-end">TOTAL</td>
            <td class="text-center"><%= datas.pesertaTotal %></td>
          </tr>
          </tbody>
        </table>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->

    <!-- data penempatan row -->
    <div class="row d-flex justify-content-center">
      <div class="col-6 table-responsive">
        <table class="table table-bordered">
          <caption>*data penempatan peserta magang</caption>
          <thead class="text-center">
          <tr >
            <th scope="col">Bidang Kegiatan</th>
            <th scope="col">Jumlah Peserta Magang</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <% datas.penempatanBiro.forEach(el => { %>
              <tr scope="row">
                <td>BIDANG <%= el.name %> </td>
                <td><%= el.data.length ?? 0 %></td>
              </tr>
            <% }) %>
          </tr>
          </tbody>
        </table>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- data tanda tangan kadis -->
    <div class="row d-flex justify-content-end align-items-end">
      <div class="ttd col-6 text-center">
        <p class="jabatan pb-5"><%= capitalize(datas.pembina.jabatan) %> Komunikasi dan Informatika <br>Kota Banjarbaru,</p>
        <p class="nama-pejabat"><%= datas.pembina.name %></p>
        <p class="nip-pejabat">NIP. <%= nipFormat(datas.pembina.nip) %></p>
      </div>
    </div>
  </section>
  <!-- /.content -->
</div>
<!-- ./wrapper -->
<!-- Page specific script -->
<script>
  window.addEventListener("load", window.print());
</script>
</body>
</html>
