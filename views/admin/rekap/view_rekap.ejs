<% include ../../partials/header.ejs %>
<% include ../../partials/navbar.ejs %>
<% include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <%# include ../../partials/message.ejs %>
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Data Rekapitulasi</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active">Data Rekapitulasi</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="col-12">
            <div class="card card-primary card-outline card-tabs">
              <div class="card-header p-0 pt-1 border-bottom-0">
                <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link active" id="custom-tabs-three-home-tab" data-toggle="pill" href="#custom-tabs-three-home" 
                      role="tab" aria-controls="custom-tabs-three-home" 
                      aria-selected="true"
                      >
                      Rekap data magang
                    </a>
                  </li>
                </ul>
              </div>
              <div class="card-body">
                <div class="tab-content" id="custom-tabs-three-tabContent">
                  <div class="tab-pane fade show active" id="custom-tabs-three-home" role="tabpanel" aria-labelledby="custom-tabs-three-home-tab">
                    <!-- date-range component -->
                    <form action="/rekap/create" method="get">
                      <div class="d-flex flex-row align-items-center">
                        <div class="col-10 form-group">
                          <label>Periode :</label>
                          <div class="input-group">
                            <div class="input-group-prepend">
                              <span class="input-group-text">
                                <i class="far fa-calendar-alt"></i>
                              </span>
                            </div>
                              <input name="tanggal" value="<%= tanggal %>" type="text" class="form-control float-right" id="reservation">
                          </div>
                        </div>
                        <div class="col-2">
                          <button type="submit" class=" btn btn-primary">buat rekap</button>
                        </div>
                      </div>
                    </form>
                    <!-- /.date-range component -->
                    <!-- /.form group -->
                    <% if (status === true) { %>
                      <% include ./rekap.ejs %>
                      <a 
                        href="/rekap/actionPrint" 
                        rel="noopener" 
                        target="_blank" 
                        class="btn btn-lg btn-success float-right mr-3"
                      >
                        <i class="fas fa-print"></i>
                        Cetak laporan
                      </a>
                    <% } %>
                  </div>
                  
                </div>
              </div>
              <!-- /.card -->
            </div>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<% include ../../partials/footer.ejs %>
<% include ../../partials/js.ejs %>